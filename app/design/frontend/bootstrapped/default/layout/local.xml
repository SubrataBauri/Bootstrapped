<layout>
    <!-- Global Operations -->
    <default>
        <!--reference name="root">
            <action method="setTemplate">
                <template>page/2columns-left.phtml</template>
            </action>
        </reference-->
       <!-- Add js/css globally -->
        <reference name="head">
            <!-- JS -->
            <action method="addItem">
                <type>skin_js</type>
                <name>js/jquery/jquery-1.10.2.min.js</name>
                <params/>
                <if>lt IE 9</if>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>js/jquery/jquery-2.0.3.min.js</name>
                <params/>
                <if>gt IE 8</if>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>js/jquery/jquery-1.10.2.min.js</name>
            </action>            
            <action method="addItem">
                <type>skin_js</type>
                <script>js/bootstrap/bootstrap.min.js</script>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <script>js/bootstrap/dropdown.js</script>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <script>js/responsive-nav.min.js</script>
            </action>            
	    <!-- CSS -->
            <action method="addItem">
                <type>skin_css</type>
                <script>css/normalize.css</script>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <script>css/bootstrap.min.css</script>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <script>css/responsive-nav.css</script>
            </action>            
            <action method="addItem">
                <type>skin_css</type>
                <script>css/styles.css</script>
            </action>

        </reference>
        <!-- //Add js/css globally -->
    </default>

</layout>